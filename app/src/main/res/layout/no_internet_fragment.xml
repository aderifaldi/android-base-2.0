<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="noInternet"
            type="labs.radya.androidcodebase.view.master.nointernet.NoInternetDataBinding"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/iconSizeXXL"
                android:layout_height="@dimen/iconSizeXXL"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:layout_marginTop="@dimen/marginM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontM"
                android:fontFamily="@font/regular"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@{noInternet.message}" />

        </LinearLayout>

    </RelativeLayout>
</layout>